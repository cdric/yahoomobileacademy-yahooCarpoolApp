<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RoleSelectionActivity" >
    
    <TextView
        android:id="@+id/tvRoleDescriptionPartOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/driver_passenger_role_description_partOne"
        android:textAlignment="center" />
    
    <TextView
        android:id="@+id/tvRoleDescriptionPartTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRoleDescriptionPartOne"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/driver_passenger_role_description_partTwo"
        android:textAlignment="center" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRoleDescriptionPartTwo"
		android:layout_centerHorizontal="true"
        android:orientation="vertical" >
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_margin="20dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >
    
		    <ImageButton
		        android:id="@+id/iv_driver_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onDriverAction"
		        android:padding="20dp"
		        android:scaleType="fitCenter"
		        android:adjustViewBounds="true"
		        android:src="@drawable/driver" />
		    
		    <TextView
		        android:id="@+id/tv_driver_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:textStyle="bold"
		        android:text="@string/driver_description" />
	    
	    </LinearLayout>
	    
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_margin="20dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >
    
		    <ImageButton
		        android:id="@+id/iv_passenger_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onPassengerAction"
		        android:padding="20dp"
		        android:scaleType="fitCenter"
		        android:adjustViewBounds="true"
		        android:src="@drawable/passenger_4" />
		    
		    <TextView
		        android:id="@+id/tv_passenger_labell"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:textStyle="bold"
		        android:text="@string/passenger_description" />
	    
	    </LinearLayout>
        


	</LinearLayout>

    

</RelativeLayout>
